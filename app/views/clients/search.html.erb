
<div class="span9 content">
  <%= render :partial => "layouts/guide/new_client" %>

  

  
  <div class="row-fluid">
    <div class="span12">
      
      <div class="row">
        
    
        
        <div class="span12">

          <%= form_for Client.new , :url => create_new_client_url ,
                :html => {:class => "form-horizontal"} do |f| %>

            <div class="control-group">
              <%= f.label :email, "Email" %>
              <div class="controls">
                <%= f.email_field :email, :class=>"input-xlarge"  %>
                <p class="help-block">Enter the client email</p>
              </div>
            </div>

            <div class="control-group">
              <%= f.label :username, "Account No" %>
              <div class="controls">
                <%= f.text_field :username, :class=>"input-xlarge" %>
                <p class="help-block">Enter the client's account number. It has to be unique.</p>
              </div>
            </div>



            <div class="form-actions">
              <button class="btn btn-primary" type="submit">Create User</button>
            </div>


          <% end %>
     
        </div><!--/span-->
        
      </div> <!--/div.row-->
      
    
    </div><!--/span-->

    
    
  </div><!--/row-fluid-->

</div><!--/span-->
